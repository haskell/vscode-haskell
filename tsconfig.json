{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "outDir": "out",
    "lib": ["es2022"],
    "sourceMap": true,
    "rootDir": ".",
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictBuiltinIteratorReturn": false
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "eslint.config.mjs"],
  "exclude": ["node_modules", ".vscode", ".vscode-test"]
}
